<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coolawesome.integrativeproject.MainController">
  <left>
    <VBox spacing="10" style="-fx-padding: 10;">
         <Label text="Space Simulation">
            <textFill>
               <LinearGradient endX="0.6926713947990544" endY="0.7990543735224587" startY="0.6832151300236406">
                  <stops>
                     <Stop>
                        <color>
                           <Color red="1.0" green="0.6499999761581421" />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color red="1.0" green="0.28240740299224854" blue="0.8923611044883728" />
                        </color>
                     </Stop>
                  </stops>
               </LinearGradient>
            </textFill>
            <font>
               <Font name="Marlett" size="28.0" />
            </font>
         </Label>
      <Label text="Simulation Info:" />
      <ListView fx:id="simulationInfoList" prefHeight="220.0" prefWidth="220.0">
        <!-- Add items here -->
      </ListView>
         <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
               <Label text="Controls:">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <VBox prefHeight="200.0" prefWidth="247.0">
                  <children>
                     <Label text="Algorithm:">
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin>
                        <padding>
                           <Insets top="10.0" />
                        </padding>
                     </Label>
                     <ChoiceBox fx:id="algoChoiceBox" prefHeight="25.0" prefWidth="95.0">
                        <VBox.margin>
                           <Insets top="5.0" />
                        </VBox.margin>
                     </ChoiceBox>
                     <HBox prefHeight="42.0" prefWidth="220.0">
                        <children>
                           <Button fx:id="playBTN" mnemonicParsing="false" onAction="#playSim" text="Play" />
                           <Button fx:id="pauseBTN" mnemonicParsing="false" onAction="#pauseSim" text="Pause" />
                        </children>
                        <VBox.margin>
                           <Insets top="10.0" />
                        </VBox.margin>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                        <children>
                           <Label text="Time Step:">
                              <HBox.margin>
                                 <Insets right="5.0" />
                              </HBox.margin>
                           </Label>
                           <Slider fx:id="timeStepSLD" max="1.0" min="0.001" minorTickCount="0" prefHeight="14.0" prefWidth="86.0" showTickMarks="true" />
                           <TextField fx:id="timeStepTXTF" onAction="#updateTimeStepSLD" prefHeight="25.0" prefWidth="45.0" />
                        </children>
                        <VBox.margin>
                           <Insets top="5.0" />
                        </VBox.margin>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                        <children>
                           <Label text="G Constant:">
                              <HBox.margin>
                                 <Insets right="5.0" />
                              </HBox.margin>
                           </Label>
                           <Slider fx:id="gConstSLD" blockIncrement="0.005" max="0.01" min="1.0E-8" prefHeight="14.0" prefWidth="84.0" showTickMarks="true">
                              <HBox.margin>
                                 <Insets />
                              </HBox.margin>
                           </Slider>
                           <TextField fx:id="gConstantTXTF" onAction="#updateGConstSLD" prefHeight="25.0" prefWidth="80.0" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
            </children>
         </AnchorPane>
    </VBox>
  </left>
  <center>
    <AnchorPane fx:id="viewport">
      <!-- Content for viewport here -->
    </AnchorPane>
  </center>
  <right>
    <VBox spacing="10" style="-fx-padding: 10;">
      <TitledPane collapsible="false" text="New Planet Preview">
        <VBox>
          <!-- Contents for preview -->
        </VBox>
      </TitledPane>
      <TitledPane collapsible="false" text="Currently Selected Planet Info">
        <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <Button fx:id="viewRandBtn" alignment="CENTER" mnemonicParsing="false" onAction="#viewRandPlanet" text="View Random Planet" textAlignment="CENTER" />
                  <Separator prefWidth="200.0" />
                   <ListView fx:id="selectedPlanetInfoList" prefHeight="220.0" prefWidth="220.0">
                       <!-- Add items here -->
                   </ListView>
               </children></VBox>
      </TitledPane>
    </VBox>
  </right>
</BorderPane>
